FROM python:3.9-slim

COPY ./app/services/authentication/authentication.py /opt/app/

COPY ./app/services/authentication/database_client.py /opt/app/


RUN pip install fastapi psycopg2-binary passlib "uvicorn[standard]"

WORKDIR /opt/app

ENTRYPOINT [ "uvicorn", "authentication:app", "--host", "0.0.0.0", "--port", "8082"]
